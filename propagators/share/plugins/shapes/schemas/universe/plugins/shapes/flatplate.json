{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [{ "$ref": "part.json" }],
    "title": "Universe/shapes/flatplate",
    "description": "Configuration for flatplate part in shapes plugin",
    "type": "object",
    "required": [
        "area",
        "normal",
        "centre"
    ],
    "properties": {
        "area": {
            "description": "Area of flat plate",
            "type": "string"
        },
        "normal": {
            "description": "Normal vector"
        },
        "centre": {
            "description": "Centre of pressure"
        }
    }
}
