{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Spacecraft participants plugin",
    "description": "Spacecraft observation participants setup",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "description": "Spacecraft participant definition",
        "type": "object",
        "required": [
            "name",
            "point",
            "transponders"
        ],
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the spacecraft participant",
                "type": "string"
            },
            "point": {
                "description": "Frames point to use",
                "examples": [
                    "XMM"
                ],
                "type": "string"
            },
            "transponders": {
                "description": "Spacecraft transponders setup",
                "type": "array",
                "uniqueItems": true,
                "items": {
                    "description": "Transponder definition",
                    "type": "object",
                    "required": [
                        "name",
                        "delay"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "description": "Transponder name",
                            "type": "string"
                        },
                        "delay": {
                            "description": "Delay definitions for specific bands",
                            "additionalProperties": {
                                "type": "object",
                                "required": [
                                    "group",
                                    "phase"
                                ],
                                "properties": {
                                    "group": {
                                        "description": "Transponder group delay",
                                        "default": "0.0 s",
                                        "examples": [
                                            "0.0001 s"
                                        ],
                                        "$ref": "../definitions.json#/definitions/scalar"
                                    },
                                    "phase": {
                                        "description": "Transponder phase delay",
                                        "default": "0.0 s",
                                        "examples": [
                                            "0.0001 s"
                                        ],
                                        "$ref": "../definitions.json#/definitions/scalar"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "properTime": {
                "description": "Spacecraft proper time equation configuration",
                "type": "object",
                "required": [
                    "bodies"
                ],
                "additionalProperties": false,
                "properties": {
                    "systemBarycenter": {
                        "description": "relativistic system barycenter point name",
                        "type": "string"
                    },
                    "systemAxes": {
                        "description": "relativistic system axes name",
                        "type": "string"
                    },
                    "L": {
                        "description": "relativistic scale correction",
                        "type": "number"
                    },
                    "bodies": {
                        "description": "relativistic bodies",
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "description": "Body name",
                            "type": "string"
                        }
                    }
                }
            },
            "antennas": {
                "description": "Spacecraft antenna setup",
                "type": "array",
                "uniqueItems": true,
                "items": {
                    "description": "Antenna definition",
                    "type": "object",
                    "required": [
                        "name",
                        "point"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "description": "Antenna name",
                            "type": "string"
                        },
                        "point": {
                            "description": "Antenna point",
                            "type": "string"
                        }
                    }
                }
            },
            "frequency": {
                "description": "Uplink frequency",
                "$ref": "../definitions.json#/definitions/scalar"
            }
        }
    }
}