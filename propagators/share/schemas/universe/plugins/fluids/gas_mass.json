{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Universe/fluids/gas_mass",
    "description": "Configuration for gas mass evaluable in fluids plugin",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "gas", "pressure", "volume", "temperature"
    ],
    "properties": {
        "gas": {
            "description": "Gas model to use"
        },
        "pressure": {
            "description": "Pressure time evaluable [Pa]"
        },
        "volume": {
            "description": "Volume time evaluable [m^3]"
        },
        "temperature": {
            "description": "Temperature time evaluable [K]"
        }
    }
}
