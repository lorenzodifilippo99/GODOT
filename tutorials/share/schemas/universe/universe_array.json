{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Universe",
    "description": "Universe environment definition for computation and modelling",
    "type": "array",
    "items": {
        "description": "plugin configuration block",
        "type": "object",
        "required": [
            "type",
            "config"
        ],
        "additionalProperties": false,
        "properties": {
            "type": {
                "description": "Plugin type name",
